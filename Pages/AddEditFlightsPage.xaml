<Page x:Class="TurfirmaApp.Pages.AddEditFlightsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurfirmaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditFlightsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <TextBlock Text="Название рейса:"/>
            <TextBox x:Name="txbName"
                 Text="{Binding Name}"/>
            <TextBlock Text="Время отправления"/>
            <TextBox x:Name="txbDeparture"
                 Text="{Binding Departure}"/>
            <TextBlock Text="Цена билета"/>
            <TextBox x:Name="txbPrice"
                 Text="{Binding Price}"/>
            <Button x:Name="saveBtn" Content="Сохранить" Click="saveBtn_Click"/>
            <Button x:Name="bckBtn" Content="Отмена" Click="bckBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
